<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_profile_img_book"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/book_bookmark_icon" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book's title: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/rv_profile_img_book"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/rv_profile_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book's author: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/rv_profile_img_book"
        android:layout_below="@+id/rv_profile_book_name"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/rv_profile_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_author"
        android:layout_below="@+id/rv_profile_book_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/rv_profile_img_book"
        android:layout_below="@+id/rv_profile_book_author"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/rv_profile_book_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rv_profile_img_book"
        android:layout_below="@id/tv_comment"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:maxHeight="55dp"/>

    <TextView
        android:id="@+id/tv_book_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Books'description: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/rv_profile_img_book"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/rv_profile_book_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_book_description"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:maxHeight="60dp"/>

</RelativeLayout>