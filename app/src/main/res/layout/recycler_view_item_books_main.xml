<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUserIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/user_account_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_profile2" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_fullname_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/cardViewUserIcon"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Full name"/>

    <ImageView
        android:id="@+id/rv_main_img_book"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/cardViewUserIcon"
        android:src="@drawable/book_bookmark_icon" />

    <TextView
        android:id="@+id/tv_title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/rv_main_img_book"
        android:layout_below="@+id/cardViewUserIcon"/>

    <TextView
        android:id="@+id/tv_author_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Author"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/rv_main_img_book"
        android:layout_below="@+id/tv_title_main"/>

    <TextView
        android:id="@+id/tv_description_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Description"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/rv_main_img_book"
        android:layout_below="@+id/tv_author_main"/>

    <TextView
        android:id="@+id/tv_comment_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Comment"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/rv_main_img_book"
        android:layout_below="@+id/tv_description_main"/>

</RelativeLayout>